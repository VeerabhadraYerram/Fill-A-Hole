rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth requirement helper
    function isAuthenticated() {
      return request.auth != null;
    }

    // Role requirement helpers
    function isRole(role) {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Users Collection
    match /users/{userId} {
      // Anyone can read a user profile (needed for leaderboards and chat apps)
      allow read: if isAuthenticated();
      // Users can only write their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Posts Collection (Civic Issues)
    match /posts/{postId} {
      // Anyone logged in can see all posts
      allow read: if isAuthenticated();
      // Only authenticated users can create posts
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      // Allow updates to existing posts (like adding upvotes or volunteers)
      allow update: if isAuthenticated(); 
      // Only authors or admins can delete
      allow delete: if isAuthenticated() && (request.auth.uid == resource.data.authorId || isRole('admin'));

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
      }
    }

    // NGO Forms Collection
    match /ngo_forms/{formId} {
      allow create, update, delete, read: if isAuthenticated();
    }

    // Applications Collection
    match /volunteer_applications/{applicationId} {
      allow create, read, update: if isAuthenticated();
    }

    // Sensor Anomalies
    match /sensor_anomalies/{anomalyId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    // Groups Collection (for Community/Volunteer Chat)
    match /groups/{groupId} {
      // Anyone logged in can read group metadata or join
      allow read, update: if isAuthenticated();
      // Anyone logged in can create a new group
      allow create: if isAuthenticated();

      match /messages/{messageId} {
        // Anyone logged in can read or write messages to a group
        allow read, create: if isAuthenticated();
        // Messages generally shouldn't be updated or deleted to maintain civic record
        allow update, delete: if false; 
      }
    }
  }
}
